<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".takeAttendanceActivity"
    android:background="@drawable/background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mark Attendance"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="40dp"
            android:layout_margin="40dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="true">
            <AutoCompleteTextView
                android:id="@+id/course_attendance"
                android:layout_width="260dp"
                android:layout_height="50dp"
                android:layout_weight="10"
                android:ems="10"
                android:inputType="none"
                android:hint="Select Course"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                android:editable="false"
                android:background="@android:drawable/editbox_background">

            </AutoCompleteTextView>
            <ImageView
                android:id="@+id/arrow_down1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="40"
                android:layout_marginTop="20dp"
                android:layout_marginRight="50dp"
                android:src="@mipmap/arrow_drop_down"/>
        </LinearLayout>
        <EditText
            android:id="@+id/date"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:layout_weight="10"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:editable="false"
            android:background="@android:drawable/editbox_background"
            android:hint="Select Date"/>
        <Button
            android:id="@+id/mark_attendance"
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:padding="12dp"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:text="MARK ATTENDANCE"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/show_attendance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Present Students"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="25dp"
            android:layout_margin="20dp"/>
    </LinearLayout>
</ScrollView>