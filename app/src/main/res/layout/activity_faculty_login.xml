<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".facultyLoginActivity"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/welcome_text_f"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Hello Faculty"
        android:textColor="@android:color/black"
        android:textSize="35dp"
        android:paddingTop="20dp"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/take_attendance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:elevation="5dp"
        android:padding="5dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="?attr/selectableItemBackground"
            android:minHeight="100dp"
            android:padding="8dp"
            android:text="Take Attendance"
            android:textColor="@android:color/black"
            android:textSize="25sp"/>
    </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/faculty_attendance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="80dp"
            android:layout_marginLeft="80dp"
            android:layout_marginBottom="20dp"
            android:elevation="5dp"
            android:padding="5dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="?attr/selectableItemBackground"
                android:minHeight="100dp"
                android:padding="8dp"
                android:text="View Attendance"
                android:textColor="@android:color/black"
                android:textSize="25sp"/>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/faculty_studentlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="80dp"
            android:layout_marginLeft="80dp"
            android:layout_marginBottom="20dp"
            android:elevation="5dp"
            android:padding="5dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="?attr/selectableItemBackground"
                android:minHeight="100dp"
                android:padding="8dp"
                android:text="View Student List"
                android:textColor="@android:color/black"
                android:textSize="25sp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/faculty_courselist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="80dp"
            android:layout_marginLeft="80dp"
            android:layout_marginBottom="20dp"
            android:elevation="5dp"
            android:padding="5dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="?attr/selectableItemBackground"
                android:minHeight="100dp"
                android:padding="8dp"
                android:text="View Course List"
                android:textColor="@android:color/black"
                android:textSize="25sp"/>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

</ScrollView>